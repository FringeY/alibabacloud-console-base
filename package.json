    "@babel/runtime": "^7.9.2",
    "babel-jest": "^24.9.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^24.9.0",
    "lerna": "^2.11.0",
    "lodash": "^4.17.15",
    "prettier": "2.0.4"
